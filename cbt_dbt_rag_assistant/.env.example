# PostgreSQL Database Connection URL
# Example: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://rag_user:rag_password@localhost:5432/rag_db

# Ollama API Base URL (if running locally or elsewhere)
OLLAMA_API_BASE=http://localhost:11434

# Default LLM model to use with Ollama
DEFAULT_LLM_MODEL=gemma:7b

# Sentence Transformer model name for embeddings
# Example: all-MiniLM-L6-v2, all-mpnet-base-v2
EMBEDDING_MODEL_NAME=all-MiniLM-L6-v2

# Embedding dimension (MUST match the chosen EMBEDDING_MODEL_NAME)
# 384 for all-MiniLM-L6-v2
# 768 for all-mpnet-base-v2
EMBEDDING_DIMENSION=384

# Optional: API keys for other services if needed later
# OPENAI_API_KEY=
# ANTHROPIC_API_KEY=

# Logging level (e.g., DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
